<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTransfers">


    <EditText
        android:id="@+id/deleteCatID"
        android:layout_width="124dp"
        android:layout_height="66dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:hint="Enter an ID"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <Button
        android:id="@+id/delTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="85dp"
        android:text="DELETE"
        app:layout_constraintStart_toEndOf="@+id/deleteCatID"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="384dp"
        android:layout_height="277dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/categorylistText"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Select a category"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/categorybttn"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:text=".." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/amount_filter"
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:hint="Amount :"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/currency_filter"
                android:layout_width="97dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:text="Mode of payment :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Spinner
                android:id="@+id/mop_viewTransfer"
                android:layout_width="142dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filterDateStart"
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Start date :"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/addFilterDate"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="ADD" />

            <TextView
                android:id="@+id/filterDateEnd"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="End date :"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/addFilterEndDate"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="ADD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filterMode"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="Recurring :"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Spinner
                android:id="@+id/recurring_viewTransfer"
                android:layout_width="185dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/viewTranfers"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="View Transfer" />

    </LinearLayout>

    <Button
        android:id="@+id/save_as_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

</android.support.constraint.ConstraintLayout>